.l-header

  .l-header-top
    padding ($margin * 2) $margin $margin
    background-color transparent
    z-index 3

    .is-project-detail-page &
      background-color transparent

  &.is-fixed
    padding-top rem(90px)

    .l-header-top
      position fixed
      top 0
      width 100%
      max-width $max-width

      background-color rgba($bg-color-1, 0.95)
      
      animation slideheader .5s ease

      .is-project-detail-page &
        background-color rgba($bg-color-1, 0.95)
        color $font-color-3
        a
          color $font-color-3
          border-color $font-color-3
        #vizzualityPath
          fill $font-color-3

  .brand
    margin 0
    float left
    line-height rem(30px)
    font-size 1rem

    a, svg
      display block

    #vizzualityPath
      fill $font-color-3

    #blogPath
      fill $font-color-1
  a
    text-decoration none

  &, a
    color $font-color-1

  .btn-burguer
    position absolute
    top rem(-10px)
    right 0

  .is-member-page .m-claim
    min-height 0

  @media screen and (min-width: $screen-sm)
    h1.brand
      font-size 1rem

.l-footer
  padding $margin 0
  background-color $bg-color-2

  a
    text-decoration none

  &, a
    color $font-color-2

  .footer-logo
    display block
    margin $margin auto
    text-align center

    svg
      display block
      margin 0 auto

    #vizzualityPath
      fill $font-color-2

  @media screen and (min-width: $screen-sm)
    padding $margin ($margin / 2)

    .footer-logo
      display inline-block
      text-align left
      margin ($margin * 2) auto


h1 {
  animation-duration: 3s;
  animation-name: slidein;
}

@keyframes slideheader
  from
    transform translate(0, -90px)

  to
    transform translate(0, 0)