.m-map
  position relative
  min-height 80vh
  max-height 800px
  background-color $bg-color-2
  color $font-color-2

  #map
    position absolute
    top 0
    left 0
    width 100%
    height 100%

#mapInput
  position relative
  z-index 1
  pointer-events none

  input
    pointer-events auto
    background-color transparent
    border 0
    border-bottom 2px solid $font-color-2

.leaflet-routing-container
  display none !important

.user-marker
  width 4px
  height 4px
  border-radius 100%
  background-color $bg-color-3
  box-shadow 0 0 0 5px rgba($bg-color-3, 0.5)

.viz-marker
  width 4px
  height 4px
  border-radius 100%
  background-color $bg-color-1
