.m-clients
  padding ($margin * 2) 0
  background-color $bg-color-5

  ul
    display flex
    flex-wrap wrap
    margin 0
    padding 0
    list-style none

  li
    display flex
    align-items center
    justify-content center
    width 50%

  @media screen and (min-width: $screen-sm)
    li
      width 25%
