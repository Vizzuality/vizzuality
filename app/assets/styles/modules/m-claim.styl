.m-claim
  display flex
  align-items center
  min-height 90vh
  padding 0 $margin
  font-size $font-xlarge-size
  font-weight 500

  article
    width 100%
    margin rem(-43px) auto 0 auto

  p
    margin-top 0
    margin-bottom .5em
    line-height .9

  .btn, .btn-secondary
    color $font-color-2
    margin $margin $margin 0 0
    float left

  .btn-secondary
    border-color $font-color-3
    color $font-color-3

  @media screen and (min-width: $screen-md)
    font-size $lg-font-xlarge-size
    min-height 95vh
    padding 0
