.m-claim
  display flex
  align-items center
  height 90vh
  padding 0 $margin
  font-size $font-xlarge-size
  font-weight 500

  article
    width 100%
    margin rem(-43px) auto 0 auto

  p
    margin-top 0
    margin-bottom .25em
    line-height .9
    letter-spacing -0.02em
    max-width 80%
    &.description
      margin-bottom .75em
      line-height 1.1
      font-size rem(22px)
      @media screen and (max-width: $screen-sm)
        font-weight 300

  .btn
    color $font-color-2
    margin-left $margin
  .btn-secondary
    position absolute
    color $font-color-3
    transition: opacity .5s ease;
    @media (max-width: $screen-md)
      opacity: 0
      &.is-visible
        opacity 1

    &:hover
      color $font-color-2

  @media screen and (min-width: $screen-md)
    font-size rem(110px)
    height 95vh

  @media screen and (min-width: $screen-lg)
    padding 0
