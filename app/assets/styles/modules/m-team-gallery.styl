.m-team-gallery
  padding 0
  list-style none
  clearfix()

  li
    position relative
    display flex
    align-items flex-end
    justify-content center
    height rem(300px)

    color $font-color-2
    text-align center

    background-color $bg-color-2
    background-repeat none
    background-position center
    background-size cover

  a
    position relative
    margin-bottom $margin
    color $font-color-2
    text-decoration none
    opacity 0
    transition opacity .5s ease
    z-index 2

  h3, p
    margin .3rem 0

  .veil
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0)
    transition background-color .5s ease
    z-index 1

  @media screen and (min-width: $screen-sm)
    li
      width 25%
      float left

      &:hover
        .veil
          background-color rgba($bg-color-3, .5)
        a
          opacity 1
