.m-team-gallery
  padding 0
  margin 0
  list-style none
  background-color $bg-color-8
  clearfix()

  li
    display flex
    align-items flex-end
    justify-content center

    position relative
    width 33.333333%
    float left
    height rem(100px)

    color $font-color-2

    background-color $bg-color-5
    background-repeat none
    background-position center
    background-size cover

  h3, p
    margin .3rem 0

  a
    margin-bottom $margin

    color $font-color-2
    text-align center
    text-decoration none

    opacity 0
    transition opacity .5s ease

  .m-team-gallery-content
    position relative
    z-index 2

  .veil
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0)
    transition background-color .5s ease
    z-index 1

  @media screen and (min-width: $screen-sm)
    li
      width 25%
      height rem(250px)
      float left

      &:hover
        .veil
          background-color rgba($bg-color-3, .5)
        a
          opacity 1
