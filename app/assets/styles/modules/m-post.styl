.m-post
  padding 0 $margin
  margin ($margin * 4) 0

  h1
    margin-bottom .3em
    line-height 1.05

    a
      text-decoration none

  figure.tmblr-full
    max-width 500px
    height auto

  .m-post-date
    display block
    margin-bottom $margin * 3
    font-size $font-medium-size

  .m-post-content
    line-height 1.4

    img
      display inline-block
      margin 1em 0
      outline 1px solid rgba(0, 0, 0, .1)
      width 100%
      height auto

    figure
      margin 1rem 0

  .btn
    margin $margin 0

  .m-post-footer
    .like_button, .reblog_button
      float left
      margin-right rem(10px)

  @media screen and (min-width: $screen-sm)
    h1
      font-size $lg-font-large-size * 0.85

    .m-post-date
      font-size $lg-font-normal-size * 1.2

