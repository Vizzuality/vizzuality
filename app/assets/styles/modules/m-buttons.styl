.btn, .btn-secondary
  width 100%
  display block
  padding ($margin / 2) 0

  border 0

  background-color $bg-color-3

  font-size $font-small-size
  font-weight 500
  color $font-color-2
  text-decoration none
  text-transform uppercase

.btn-secondary
  border 1px solid $font-color-2
  text-align center

.btn-burguer
  width rem(50px)
  height rem(50px)
  padding 0
  border 0

  background none

.btn-close
  width rem(50px)
  height rem(50px)
  padding 0
  border 0

  background none

  font-size rem(30px)
  font-weight 500
