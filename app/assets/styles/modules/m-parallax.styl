.m-parallax

  .parallax-container
    overflow hidden
    position relative
    width 100%
    height 550px
  @media screen and (max-width: $screen-sm)
    .parallax-container
      height 150px

  @media screen and (min-width: $screen-md) and (max-width: $screen-lg)
    .parallax-container
      height 300px

  .parallax-bg
    position absolute
    top -300px
    left 0
    right 0
    bottom -300px
    background-size contain
    background-position 50% 0
    background-repeat no-repeat

