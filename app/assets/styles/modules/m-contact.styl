$textarea-line-height = rem(50px)

.m-contact
  padding ($margin * 4) $margin
  margin-left auto
  margin-right auto
  max-width rem(900px)

  h1
    text-align center

  .form-row
    margin ($margin * 2) 0

    p
      margin 0

  input, textarea
    width 100%
    border 0
    border-bottom 1px solid $alto
    &:-ms-input-placeholder
      color $alto

  textarea
    height $textarea-line-height * 5
    border-bottom 0
    background url(/assets/images/bg-textarea.png) repeat

  .btn
    display block
    width 100%

  .is-error
    padding .7em

    color $font-color-4
    font-size $lg-font-normal-size
    font-weight 500
    text-align center

    background-color rgba($bg-color-7, .1)

  @media screen and (min-width: $screen-sm)
    font-size $lg-font-medium-size * 0.85
    letter-spacing -0.05em

    h1
      font-size $lg-font-xlarge-size

    input, textarea
      line-height $textarea-line-height
      letter-spacing -0.05em

    textarea
      height $textarea-line-height * 7

    .m-contact-email
      padding-left 50%

    .btn
      display block
      width auto
      margin-top $margin * 4
      margin-left auto
      margin-right auto
      min-width rem(250px)

    .is-error
      letter-spacing normal

.m-contact-footer
  text-align center
