browser-icon($left = 0)
  position absolute
  display block
  content ""
  width 8px
  height 8px
  top 10px
  left $left
  border-radius 4px
  background-color #CECECE

$margin-bottom = $margin * 4

.is-project-detail-page

  .l-header
    position relative
    z-index 10

    .l-header-top
      background-color transparent

    .brand #vizzualityPath
      fill $white

    .btn-burguer
      .icon-burguer, .icon-burguer:before, .icon-burguer:after
        background-color $bg-color-1

  .l-main
    position relative
    margin-top rem(-90px)

  @media (max-width: $screen-md)
    .m-project-detail
      header
        height 82vh

// Header
.m-project-detail-header
  position relative
  display flex
  align-items center
  height 100vh
  padding 0 $margin
  color $font-color-2
  background-repeat none
  background-position center
  background-size cover

  h1
    // margin-top 0.5rem
    margin-bottom .2em
    max-width 70%
    font-size 36px


  .summary
    margin 0 0 25px
    font-size 90px
    font-weight 400
    letter-spacing -1.8px
    line-height 85px


  p
    margin-bottom 0
    padding-left .1rem
    font-size $font-medium-size
    strong
      font-size $font-large-size

  @media screen and (min-width: $screen-sm)
    height 80vh
    align-items flex-end
    padding-bottom ($margin * 2)

  @media (max-width: $screen-md)
    align-items flex-end
    h1
      font-size 20px

    .summary
      margin $margin 0 ($margin * 2)
      font-size 48px
      line-height 41px

.btn-check
  width 100%
  @media (min-width: $screen-md)
    display none

// Content
.m-project-detail-content
  margin 0
  padding ($margin) ($margin) 0

  h1
    text-align center


  h2,
  .date
    text-align left
    font-size 18px;


  p
    font-size rem(24px)

  .client-info
    margin-top 0
    @media (min-width: $screen-md)
      margin-top 1.75rem

    img, p
      margin 0
    img
      float none

    h2, p, .date
      font-size rem(18px)

    h2
      margin 8px 0
    a
      margin-top 1rem
      display none
      @media (min-width: $screen-md)
        display inline-block

  @media screen and (max-width: $screen-sm)
    .row
      display flex
      flex-direction column-reverse


  @media screen and (min-width: $screen-sm)
    .m-project-client-logo
      float right
      // margin-top $margin
      margin-bottom $margin
      margin-left $margin * 2

// Footer with links
.m-project-detail-footer

  .m-project-url
    min-height rem(250px)
    padding $margin 0
    background-color $bg-color-6



    .link-cover
      position absolute
      top 0
      left 0
      right 0
      bottom 0

    p
      font-size rem(36px)
      color $white
      margin 0 36px 0 0

    .btn
      position relative
      background-color transparent
      letter-spacing normal
      font-size $font-large-size
      color $font-color-3
      text-transform none
      background-color $bg-color-1
      &:hover
        color $malachite

    @media screen and (max-width: $screen-sm)
      flex-direction column
      p
        margin 0 0 36px 0


// Module articles left and right
.m-project-detail-article
  margin 0

  h2
    font-size rem(48px)

  p
    font-size rem(24px)

  &.is-right
    background-color $bg-color-9

  .btn, .btn-secondary
    display block

  .m-project-article-content
    padding $margin
    margin-bottom $margin

  .parallax-content
      position relative
      width 100%
      height 550px
      overflow hidden
      div
        position absolute
        top -300px
        left 0
        right 0
        bottom -300px
        background-size contain
        background-position 50% 0
        background-repeat no-repeat

  @media screen and (max-width: $screen-sm)
    .parallax-content
      height 150px

  @media screen and (min-width: $screen-md) and (max-width: $screen-lg)
    .parallax-content
      height 300px

  @media screen and (min-width: $screen-sm)
    .m-project-article-content
      .btn, .btn-secondary
        display inline-block

// Module blocks
.m-project-detail-blocks
  padding $margin
  // margin-bottom $margin-bottom

  p
    font-size $font-medium-size

  .thumb
    margin-top 1px
    max-height rem(200px)
    overflow hidden
    outline 1px solid rgba(0, 0, 0, .1)

    img
      width 100%
      height auto

    @media screen and (min-width: $screen-sm)
      max-height rem(260px)

// Module iframe
.m-project-detail-iframe
  margin $margin
  margin-bottom $margin-bottom

  h2
    text-align center

  .m-project-iframe
    position relative
    padding 27px 4px 4px 4px
    background-color #E4E4E4
    border-radius 4px

    &:before
      browser-icon(8px)

    &:after
      browser-icon(20px)

    .m-project-iframe-content:before
      browser-icon(32px)

    iframe
      width 100%
      height rem(420px)

  @media screen and (min-width: $screen-sm)
    .m-project-iframe iframe
      height rem(600px)

    p
      text-align center
      max-width 60%
      margin-left auto
      margin-right auto


// Module video
.m-project-detail-video
  padding 0 $margin
  color $font-color-2
  background-color $bg-color-2

  &.light
    background-color $bg-color-9

  h2
    margin-top 0

  .video-box
    position relative
    padding-bottom 56%
    height 0

    iframe
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      width 100%
      height 100%

// Module blog
.m-project-blog
  margin 3.25rem 0
  .m-post-card
    // max-height 60vh
    height auto
    padding 6.25rem
    margin 0


// Module opinions
.m-project-opinions
  padding ($margin * 4) 0
  background-color $bg-color-9

  .sameheight
    justify-content center

    .m-project-opinion-item
      margin-bottom $margin
      padding ($margin * 2)
      background-color $bg-color-1

    .m-project-opinion-photo
      text-align center
      margin-top 0

      img
        width auto
        max-height rem(50px)

    .m-project-opinion-text
      margin-top .3em
      font-size $font-medium-size
      text-align center

    .m-project-opinion-autor
      text-align center
      font-weight 500
      max-width 90%
      margin auto
      a
        text-decoration none

    @media screen and (min-width: $screen-sm)
      .row > div
        display flex
        justify-content stretch

      .m-project-opinion-item
        display flex
        align-items center
        margin-bottom 0

// Module next project
.m-project-detail-next
  position relative
  display flex
  align-items center
  justify-content center
  padding ($margin * 2) $margin

  color $font-color-2
  text-align center

  background-repeat no-repeat
  background-size cover
  background-position center

  overflow hidden

  h1
    margin 0 auto
    // line-height 1.1
    max-width 70%

  p
    margin .3em 0
    text-transform uppercase
    font-weight 500
    letter-spacing 0.2em

  a
    color $font-color-2
    text-decoration none

  veil()

  @media screen and (min-width: $screen-sm)
    min-height rem(350px)
