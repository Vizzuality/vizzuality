.m-nav
  text-align right

  a
    display inline-block
    line-height rem(20px)
    margin-left $margin * 2
    text-transform uppercase
    font-size $font-small-size
    font-weight 500
    color $font-color-3
    letter-spacing 0.1em

    &.is-current
      border-bottom 2px solid $font-color-3

    .is-project-detail-page &
      color $font-color-2
      border-bottom-color $font-color-2

.m-mobile-nav
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding ($margin * 2) $margin
  background-color $bg-color-3
  z-index 1001

  .icon-logo-vizzuality
    fill $font-color-2

  h1
    margin-top 0

  a
    display block
    float left
    clear left

    font-size $font-xlarge-size
    font-weight 500
    line-height rem(46px)
    color $font-color-1
    text-decoration none
    &::first-letter
      text-transform uppercase



  .btn-close
    position absolute
    top rem(33px)
    right $margin
    color $font-color-1
