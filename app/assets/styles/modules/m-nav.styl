.m-nav
  text-align right

  a
    display inline-block
    line-height rem(30px)
    margin-left $margin
    text-transform uppercase
    font-size $font-small-size
    font-weight 500

.m-mobile-nav
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding ($margin * 2) $margin

  background-color $bg-color-3

  z-index 100

  .logo
    fill $font-color-2

  h1
    margin-top 0

  a
    display block

    font-size $font-xlarge-size
    font-weight 500
    line-height 1
    color $font-color-2
    text-decoration none

  .btn-close
    position absolute
    top rem(33px)
    right $margin
    color $font-color-2
