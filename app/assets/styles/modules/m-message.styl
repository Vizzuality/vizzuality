.m-message
  padding ($margin * 4) $margin
  text-align center
  color $font-color-3

  p
    font-size $font-large-size
    font-weight 500
    line-height 1
    margin $margin 0
    letter-spacing -0.02em

    @media screen and (min-width: $screen-sm)
      font-size $lg-font-xlarge-size

  a
    margin $margin auto
    display inline-block
