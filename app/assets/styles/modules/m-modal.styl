.m-modal
  position fixed
  top 0
  left 0
  width 100%
  height 100%

  background-color rgba($bg-color-2, 0.3)

  z-index 100

.m-modal-content
  position absolute
  top 5%
  left 5%
  right 5%
  max-height 90%
  padding $margin * 2
  overflow auto
  -webkit-overflow-scrolling touch

  background-color $bg-color-1


  h2
    margin-top .3em

  ul
    columns 2 200px
    column-fill auto
    list-style none

    margin-left 0
    margin-right 0
    padding-left 0
    padding-right 0

  li
    position relative
    margin-bottom $margin
    padding-left 1.5rem

    &:before
      position absolute
      left 0
      display inline-block
      content "â€“"

    a
      text-decoration none

      &:hover
        text-decoration underline

  .btn-close
    position fixed
    right 5%
    top 5%
