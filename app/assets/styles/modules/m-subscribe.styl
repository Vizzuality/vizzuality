.m-subscribe
  padding 4.5rem 1.25rem
  background-color $feijoa
  .m-subscribe-content
    display flex
    align-items center
    justify-content space-around
    span
      font-size rem(48px)
      font-weight 500
      color $white
    .m-subscribe-email
      display flex
      justify-content space-between
      align-items center
      padding-bottom rem(5px)
      border-bottom 2px solid rgba(255,255,255, .5)
      input
        width 75%
        background-color transparent
        border 0
        font-size rem(48px)
        color $white
        &::-webkit-input-placeholder
          color $white
      .btn-secondary
        margin 0
        border 0
