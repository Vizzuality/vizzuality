.is-team-page
  @media (max-width: $screen-sm)

    .l-header
      position relative
      z-index 9999

      .brand
        #vizzualityPath
          fill $white

      .icon-burguer:before,
      .icon-burguer,
      .icon-burguer:after
        background-color $font-color-1

      &.is-fixed
        .brand
          #vizzualityPath
            fill $font-color-3
        .icon-burguer:before,
        .icon-burguer,
        .icon-burguer:after
          background-color #000

    .l-main
      margin-top -4.4rem

  .m-team
    padding 0 $margin ($margin * 4) $margin
    clearfix()

    h1
      margin-top $margin * 3
      margin-bottom 0

    .main-phrase
      font-size $font-xlarge-size
      line-height .95
      font-weight 500
      letter-spacing -0.1rem

      &:before
        display block
        content "“"
        color $font-color-3
        font-size rem(144px)
        line-height 1rem

    .photo
      position relative
      margin-left ($margin * -1)
      margin-right ($margin * -1)
      margin-bottom ($margin * 4)
      background-repeat no-repeat
      background-size cover
      background-position center
      &:after
        content: ''
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        background-image: linear-gradient(-180deg, rgba(0,0,0,0.15) 0%, rgba(0,0,0,0.00) 33%, rgba(0,0,0,0.00) 100%);


      img
        width 100%

    .position
      font-weight 500
      margin-top 0
      margin-bottom $margin * 2

    footer a
      text-decoration none
      color $font-color-3
      font-weight 500

    @media screen and (min-width: $screen-sm)
      padding-top ($margin * 4)

      h1
        font-size $lg-font-medium-size

      .photo
        float right
        height 0
        width 28%
        padding-bottom 100%
        padding-bottom 28%
        border-radius 50%
        overflow hidden

        img
          display none

      .content, footer, .position, h1
        padding-left 80px
        padding-right 30%

      .main-phrase
        position relative
        padding-left 80px
        padding-right 30%
        margin-bottom auto
        font-size $lg-font-large-size
        margin-top 0

        &:before
          position absolute
          line-height .8
          left 0

        &:after
          display inline-block
          content "”"
          color $font-color-3
          font-size rem(144px)
          line-height 0
          vertical-align text-bottom
          margin-left 1rem

    @media screen and (min-width: $screen-lg)
      .content, footer, .position, h1
        padding-right 50%
      .main-phrase
        margin-right 10%

.m-prev-next-team
  background-color $bg-color-8

  .m-prev-team-item, .m-next-team-item
    display flex
    align-items center
    justify-content center
    margin $margin
    padding $margin * 2
    text-align center
    background-color $bg-color-1

    h2, p
      margin .3em

    a
      text-decoration none

    p
      text-transform uppercase
      font-weight 500
      color rgba($font-color-1, .3)
      letter-spacing 0.2em
      font-size $font-small-size

    .position
      color $font-color-3

  @media screen and (min-width: $screen-sm)

    .m-prev-next-team-items
      display flex
      justify-content space-between

      h2
        font-size $lg-font-normal-size * 1.75

    .m-prev-team-item, .m-next-team-item
      width 50%

