.m-project-card
  position relative
  display flex
  align-items center
  justify-content center
  padding 0 $margin
  height 100vh
  margin-left -1%
  margin-right -1%
  margin-bottom $margin

  color $font-color-2
  text-align center

  background-color $bg-color-2
  background-repeat none
  background-position center
  background-size cover

  .cover-link
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 5


  &.left
      justify-content flex-start
      text-align left
      h1, .description
        margin-left 0

  &.right
    justify-content flex-end
    text-align right
    h1, .description
      margin-right 0

  h1 > a
    display block
    color $font-color-2
    text-decoration none

    @media screen and (min-width: $screen-xl)
      font-size $lg-font-large-size * 1.1

  h1
    margin .3em

  .client
    text-transform uppercase
    font-weight 500
    letter-spacing 0.2em
    font-size $lg-font-normal-size

  .btn-secondary
    border 0

  .m-project-content
    position relative
    max-width 95%
    font-size $lg-font-small-size * 1.7
    font-weight 500
    z-index 7
    pointer-events none

    .btn-third
      pointer-events all


  .veil
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .3)
    transition background-color .5s ease

  @media screen and (min-width: $screen-sm)
    margin-left auto
    margin-right auto
    padding 0 $margin * 5

    .description
      max-width 50%
      margin-left auto
      margin-right auto

    &:hover .veil
      background-color rgba(0, 0, 0, 0)

  @media screen and (min-width: $screen-sm) and (orientation: landscape)
    min-height 800px
    max-height 65vh
