.m-project-card
  position relative
  display flex
  align-items center
  justify-content center
  padding 0 $margin
  height 100vh
  margin-left -1%
  margin-right -1%
  margin-bottom $margin

  color $font-color-2
  text-align center

  background-color $bg-color-2
  background-repeat none
  background-position center
  background-size cover

  h1 > a
    display block
    color $font-color-2
    text-decoration none

  h1
    margin .3em

  .client
    text-transform uppercase
    font-weight 500

  .btn-secondary
    color $font-color-3
    border 0

  .m-project-content
    position relative
    max-width 95%
    margin-left auto
    margin-right auto
    z-index 1

  .veil
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .3)
    transition background-color .5s ease

  @media screen and (min-width: $screen-sm)
    max-height 80vh
    margin-left auto
    margin-right auto

    .description
      max-width 50%
      margin-left auto
      margin-right auto

    &:hover .veil
      background-color rgba(0, 0, 0, 0)
