.m-project
  display flex
  align-items center
  justify-content center
  padding 0 $margin
  min-height 100vh
  margin-left -1%
  margin-right -1%
  margin-bottom $margin

  color $font-color-2
  text-align center

  background-repeat none
  background-position center
  background-size cover

  a
    display block
    color $font-color-2
    text-decoration none

  h1
    text-shadow 0 0 1px $font-color-1
