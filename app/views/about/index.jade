extends ../layout.jade

block claim
  .row
    .grid-sm-14.grid-lg-12.offset-lg-1
      .m-claim
        article
          p Great user
            | experiences for
            | stories that matter.
          a(class="btn-secondary is-anchor", href="#team") Our team
          a(class="btn is-anchor", href="#contact") Contact

block main
  section.m-about
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        ul.m-team-gallery#team
          for member in team
            if (member)
              li(style="background-image: url(/assets/images/team/#{member.photo})")
                a(href="/about/#{member.slug}")
                  .veil
                  .m-team-gallery-content
                    h3= member.name
                    p= member.position
                    img.is-hidden(src="/assets/images/team/#{member.photo}", alt=member.name)
            else
              li(style="background-image: url(http://40.media.tumblr.com/f6c80194ba68462ccf348db732513a44/tumblr_inline_nnxbdzbATP1tn8nre_500.png)")
  
  section.m-message
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        p Weâ€™re hiring.
        a(href="#", class="btn") Apply
  
  section.m-clients
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
          ul
            li: img(src="/assets/images/clients/client-1.png")
            li: img(src="/assets/images/clients/client-2.png")
            li: img(src="/assets/images/clients/wri.png")
            li: img(src="/assets/images/clients/client-4.png")
  
  section.m-contact#contact
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        h1 Get in touch.
        form#contactForm(action="/contact", method="post", autocomplete="off")
          p Dear vizzuality,
          .form-row
            textarea(name="message", placeholder="Message", required)
          .form-row.m-contact-email
            p#closeString Cheers,
            input(name="email", type="email", placeholder="Contact email", required)
          .form-row.m-contact-submit
            button(type="submit", class="btn") Send
