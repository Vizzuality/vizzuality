extends ../layout.jade

block vars
  - var title = 'About'
  - var about = 'Our ability to innovate and deliver exciting products is down to the talents of our staff.'

block claim
  .row
    .grid-sm-14.grid-lg-12.offset-lg-1
      .m-claim
        article
          p Great user
            | experiences for
            | stories that matter.
          p.description We are Vizzuality: a band of engineers, designers, 
            br
            | strategists and scientists dedicated to making your data matter
          a(class="btn-secondary is-anchor", href="#team") Our team
          a(class="btn is-anchor", href="#contact") Contact

block main
  section.m-about
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        ul.m-team-gallery#team
          - var images = ['bici', 'pc', 'ventilador', 'gnome', 'cabage', 'cambridge']
          - var count = 0
          for member, i in team
            if (member)
              li(style="background-image: url(/assets/images/team/#{member.photo})")
                a(href="/about/#{member.slug}")
                  .veil
                  .m-team-gallery-content
                    h3= member.name
                    p= member.position
                    img.is-hidden(src="/assets/images/team/#{member.photo}", alt=member.name)
            else
              li(style="background-image: url(/assets/images/office/#{images[count]}.jpg)")
              - count = count + 1 

  section.m-message
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        p Weâ€™re hiring.
        a(href="http://vizzuality.github.io/job-offers/", class="btn") Apply

  section.m-map
    #mapInput
      .row
        .grid-sm-14.grid-lg-12.offset-lg-1
          //- h2 Where are you?
          //- input(type="text")
    #map
    
    .m-map-locations
      .row
        .grid-sm-14.grid-lg-4.offset-lg-1
          #madridOffice.m-map-location-item.is-highlighted
            h3 Madrid
            p C/ Eloy Gonzalo, 27, 2
              br
              | 28010, Madrid
              br
              | Spain
        .grid-sm-14.grid-lg-4
          #cambridgeOffice.m-map-location-item
            h3 Cambridge
            p Office D, Dales Brewery
              br
              | Gwydir St,
              br
              | Cambridge, CB1 2LJ, United Kingdom
        .grid-sm-14.grid-lg-4
          #washingtonOffice.m-map-location-item
            h3 Washington, DC
            p WeWork Crystal City
              br
              | 2221 S Clark St, Arlington
              br
              | VA 22202, USA
  
  
  section.m-contact#contact
    .row
      .grid-sm-14.grid-lg-12.offset-lg-1
        h1 Get in touch.
        form#contactForm(action="/contact", method="post", autocomplete="off")
          p Dear vizzuality,
          .form-row
            textarea(name="message", placeholder="Message", required)
          .form-row.m-contact-email
            p#closeString Cheers,
            input(name="email", type="email", placeholder="Contact email", required)
          .form-row.m-contact-submit
            button(type="submit", class="btn") Send

          input(type="hidden" name="_csrf" value="#{csrfToken}")

